<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPink"
        android:textSize="@dimen/textSizes"
        android:id="@+id/textViewActionLaden"
        android:text="Wirklich die Teams laden?"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ja"
        android:textSize="@dimen/textSizes"
        android:id="@+id/buttonJaLaden"
        android:layout_below="@+id/textViewActionLaden"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nein"
        android:textSize="@dimen/textSizes"
        android:id="@+id/buttonNeinLaden"
        android:layout_below="@+id/textViewActionLaden"
        android:layout_alignRight="@+id/textViewActionLaden"
        />
</RelativeLayout>