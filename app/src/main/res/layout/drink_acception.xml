<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="640dp"
    android:layout_centerHorizontal="true"
    android:layout_height="260dp" android:background="@drawable/dialog_border">

    <TextView
        android:text="Bist du sicher, dass du dieses \nleckere Getränk trinken möchtest?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="40sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPink" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Ja"
        android:textSize="32sp"
        android:textColor="@color/colorPink"
        android:id="@+id/buttonDrinkOk"
        android:layout_below="@+id/textView5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Nein"
        android:textSize="32sp"
        android:textColor="@color/colorPink"
        android:id="@+id/buttonDrinkCancel"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"/>
</RelativeLayout>