<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="600dp"
    android:layout_centerHorizontal="true"
    android:layout_height="480dp" android:background="@drawable/dialog_border">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameChoose"
        android:textSize="40sp"
        android:textColor="@color/colorPink" />
    <TextView
        android:text="Zu trinkende Menge: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMengeDrink"
        android:textSize="32sp"
        android:layout_below="@+id/textViewNameChoose"
        android:textColor="@color/colorPink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGlueckwunsch"
        android:textSize="32sp"
        android:textColor="@color/colorPink"
        android:layout_below="@+id/textViewMengeDrink"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGlueckwunsch"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeChooseImageViews">

        <ImageView
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:src="@drawable/number1white"
            android:layout_margin="10dp"
            android:id="@+id/imageViewChooseDrink1" />

        <ImageView
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:layout_margin="10dp"
            android:src="@drawable/number2white"
            android:id="@+id/imageViewChooseDrink2"
            android:layout_toRightOf="@+id/buttonChooseDrink1"

            />

        <ImageView
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:layout_margin="10dp"
            android:src="@drawable/number3white"
            android:id="@+id/imageViewChooseDrink3"
            android:layout_toRightOf="@+id/buttonChooseDrink3"
            />

    </LinearLayout>


  <Button
        android:text="Mischen"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/buttonRandom"
        android:textSize="32sp"
        android:textColor="@color/colorPink"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeChooseImageViews"
       />



</RelativeLayout>