<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="320dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/dialog_border">

    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Namen eingeben: "
        android:textSize="40sp"
        android:id="@+id/textViewChangeTeamHeadline"
        android:textColor="#ffaaab" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Teamname: "
        android:textSize="32sp"
        android:id="@+id/textViewChangeTeamName"
        android:layout_below="@+id/textViewChangeTeamHeadline"
        android:textColor="#ffaaab" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Mitglied 1: "
        android:textSize="32sp"
        android:id="@+id/textViewChangeTeamMemberOne"
        android:layout_below="@+id/textViewChangeTeamName"
        android:textColor="#ffaaab" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Mitglied 2: "
        android:textSize="32sp"
        android:id="@+id/textViewChangeTeamMemberTwo"
        android:layout_below="@+id/textViewChangeTeamMemberOne"
        android:textColor="#ffaaab" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextChangeTeam"
        android:textColor="#ffaaab"
        android:layout_toRightOf="@+id/textViewChangeTeamHeadline"
        android:layout_below="@+id/textViewChangeTeamHeadline"
        />
    <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/editTextChangeMemberOne"
           android:textColor="#ffaaab"
        android:layout_below="@+id/textViewChangeTeamName"
        android:layout_alignStart="@+id/editTextChangeTeam" />
      <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/editTextChangeMemberTwo"
           android:textColor="#ffaaab"
          android:layout_below="@+id/textViewChangeTeamMemberOne"
          android:layout_alignStart="@+id/editTextChangeMemberOne" />


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="OK"
        android:layout_below="@+id/textViewChangeTeamMemberTwo"
        android:id="@+id/buttonChangeTeamOK"
        android:textSize="32sp"
        android:textColor="#ffaaab"
        />


</RelativeLayout>